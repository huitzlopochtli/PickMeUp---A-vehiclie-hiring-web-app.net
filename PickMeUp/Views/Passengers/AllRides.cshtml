@model IEnumerable<PickMeUp.Entity.Ride>

@{
    ViewBag.Title = "AllRides";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Rides</h2>

<h3>
    Total Amount Spent : @ViewBag.TotalAmount
</h3>
<table id="table" class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.StartLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RideStatus)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.StartLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Payment.Amount)
                </td>
                <td>
                    @Html.DisplayFor(model => item.RideStatus)
                </td>

            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#table").DataTable();
        });
    </script>
}