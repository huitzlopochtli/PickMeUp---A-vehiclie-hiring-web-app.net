@model PickMeUp.Models.Passenger.PassengersViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_passengerView.cshtml";
}

<h2>Request for a Ride</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PaymentTypeId)
    @Html.HiddenFor(model => model.VehicleTypeId)
    @Html.HiddenFor(model => model.RideId)
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.StartLocation)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.StartLocation, new { @class = "form-control" })
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.EndLoaction)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.EndLoaction, new { @class = "form-control" })
            </div>
        </div>



        <div class="col-md-12 row jumbotron">
            map
        </div>


        <div class="row">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.Distance)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.Distance, new { @class = "form-control" })
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.Expense)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.Expense, new { @class = "form-control" })
            </div>
        </div>


        <div class="row col-md-2">
            <input type="submit" value="Request a ride" class="btn btn-success" />
        </div>


    </div>

    <div class=" row col-md-4">
        <div class="row btn-block">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.VehicleType)
            </div>

            <div class="col-md-6">
                @Html.DropDownListFor(model => model.VehicleType, new SelectList(new List<string>(), "Value", "Text"), new { @class = "form-control" })
                <small>@Html.DisplayFor(model => model.FareRate, new { @class = "text-danger" })</small>
            </div>

        </div>

        <div class="row btn-block">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.PaymentType)
            </div>

            <div class="col-md-6">
                @Html.DropDownListFor(model => model.PaymentType, new SelectList(new List<string>(), "Value", "Text"), new { @class = "form-control" })
                
            </div>
        </div>

    </div>

}
